import java.awt.AWTException;
import java.awt.Robot;
import java.awt.event.KeyEvent;
import java.awt.event.MouseEvent;

public class PaintOnCanvas {

	public static void main(String[] args) {
		
		Robot jarvis;
		double x,y;
		double cenx,ceny;
		double theta=0,rad=100,alpha=Math.PI/2,dtheta=0.001,dalpha=0,a=110;
		String appName="paint3d";
		appName=appName.toUpperCase();
		try {
			jarvis = new Robot();
		
			jarvis.mouseMove(200, 850);
			jarvis.delay(5);
			jarvis.mousePress(MouseEvent.BUTTON1_DOWN_MASK);
			jarvis.mouseRelease(MouseEvent.BUTTON1_DOWN_MASK);
			jarvis.delay(1000);
		
			for(int p=0;p<appName.length();p++)
			{
				jarvis.keyPress(appName.charAt(p));
				jarvis.keyRelease(appName.charAt(p));
				jarvis.delay(500);
			}
			jarvis.delay(500);
		
			jarvis.mouseMove(200, 310);
			jarvis.mousePress(MouseEvent.BUTTON1_DOWN_MASK);
			jarvis.mouseRelease(MouseEvent.BUTTON1_DOWN_MASK);
			jarvis.delay(800);
		
			jarvis.mouseMove(560, 250);
			jarvis.mousePress(MouseEvent.BUTTON1_DOWN_MASK);
			jarvis.mouseRelease(MouseEvent.BUTTON1_DOWN_MASK);
			jarvis.delay(800);
			jarvis.delay(200);
		
			jarvis.mouseMove((int)(650+rad*Math.sin(theta)-a*Math.cos(alpha)), 480+(int)(rad*Math.cos(theta)-a*Math.sin(alpha)));
			jarvis.mousePress(MouseEvent.BUTTON1_DOWN_MASK);
			cenx=650;
			ceny=480;
			while(theta<24*Math.PI)
			{
				x=cenx+rad*Math.sin(theta)-a*Math.cos(alpha);
				y=ceny+(rad*Math.cos(theta)-a*Math.sin(alpha));
				dalpha=-(rad/a)*Math.sin(alpha+theta)*dtheta;
				jarvis.mouseMove((int)x,(int)y);
				alpha+=dalpha;
				theta+=dtheta;
			}
			jarvis.mouseRelease(MouseEvent.BUTTON1_DOWN_MASK);
		} catch (AWTException e) {
		
			e.printStackTrace();
		}
		
	}

}
